            android:screenOrientation="portrait"
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".ChineseActivity"
            android:label="@string/chinese" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".SpanishActivity"
            android:label="@string/spanish" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".UrduActivity"
            android:label="@string/urdu" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".ArabicActivity"
            android:label="@string/arabic" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".PortugueseActivity"
            android:label="@string/arabic" >
        </activity>
    </application>

</manifest>
